<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_rv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/centerimage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tv_songName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Song Name"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rv"></TextView>

    <TextView
        android:id="@+id/tv_songArtist"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_songName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_songName"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>