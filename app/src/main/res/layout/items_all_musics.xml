<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_all_musics"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/centerimage2"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </ImageView>

    <TextView
        android:id="@+id/items_song_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Song Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@id/iv_all_musics"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <TextView
        android:id="@+id/items_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Artist"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/items_song_name"
        app:layout_constraintStart_toEndOf="@id/iv_all_musics"


        >

    </TextView>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="02:03:3"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>